# ConfoRL Environment Configuration
# Copy this file to .env and modify values as needed

# Application Settings
CONFORL_VERSION=0.1.0
CONFORL_LOG_LEVEL=INFO
CONFORL_ENV=production

# Build Settings
BUILD_DATE=
VCS_REF=
RUN_TESTS=false

# Database Configuration
POSTGRES_DB=conforl
POSTGRES_USER=conforl
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# Security Settings
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ML/AI Configuration
MODEL_CACHE_SIZE=1000
TRAINING_BATCH_SIZE=256
INFERENCE_TIMEOUT=30

# Storage Configuration
DATA_STORAGE_PATH=./data
MODEL_STORAGE_PATH=./models
LOG_STORAGE_PATH=./logs
BACKUP_STORAGE_PATH=./backups

# Cloud Provider Settings (if applicable)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2
AWS_S3_BUCKET=

AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER_NAME=

GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_KEY=
GCP_STORAGE_BUCKET=

# External Services
SLACK_WEBHOOK_URL=
PAGERDUTY_API_KEY=
DATADOG_API_KEY=

# Feature Flags
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_DISTRIBUTED_TRAINING=false
ENABLE_GPU_ACCELERATION=false
ENABLE_COMPLIANCE_CHECKS=true
ENABLE_I18N=true

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=20
CACHE_TTL=3600

# Development Settings (only for dev environment)
DEBUG=false
RELOAD_ON_CHANGE=false
ENABLE_PROFILING=false
LOG_SQL_QUERIES=false